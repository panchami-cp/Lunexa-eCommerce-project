<%- include("../partials/user/header")%>


<div class="container d-flex m-0">
  <div class="sidebar">

    <%- include("../partials/user/profileSidebar")%>

  </div>

  <div class="profile-section">
    <div class="profile-card">
      <div class="profile-header d-flex justify-content-between">
        <h4>Profile Details</h4>
        <img src="<%=user.profileImage%>" alt="Profile" class="profile-image">
        
      </div>
<!-- details -->
      <div class="details-row">
        <div class="label ">Full Name</div>
        <div class="value text-capitalize"><%=user.fullname%></div>
      </div>
      <div class="details-row">
        <div class="label">Mobile Number</div>
        <div class="value"><%= user.phone ? user.phone : 'Not available' %></div>
      </div>
      <div class="details-row">
        <div class="label">Email ID</div>
        <div class="value"><%=user.email%></div>
      </div>
      <div class="details-row">
        <div class="label">Gender</div>
        <div class="value text-capitalize"><%=user.gender || 'Not specified'%></div>
      </div>

      <div class="details-row">
        <div class="label">Location</div>
        <div class="value text-capitalize"><%=address ? address.city : 'Not available'%></div>
      </div>
      <div class="details-row">
        <div class="label">Alternate Mobile</div>
        <div class="value"><%=user.alternatePhone ? user.alternatePhone : 'Not available' %></div>
      </div>
       <div class="details-row mt-3 border border-danger rounded p-2">
        <div class="label">Share your Referral Code</div>
        <div class="value"><%=user.referralCode %></div>
      </div>

      <!-- <button class="edit-button">EDIT</button> -->
    </div>
  </div>
</div>

 <%- include("../partials/user/footer")%>
