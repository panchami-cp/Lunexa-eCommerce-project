<%- include("../partials/user/header")%>

    <head>
        <style>
            body, html {
            margin: 0;
            min-height: 100%;
            background-color: white;
        }
        .container {
            min-height: 100vh;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color:white;
            gap: 20px;
            padding: 20px;
            overflow-y: auto; 
        }
        .login_wrap {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            border-radius: 5px;
            background: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .auth-header{
            font-size: 26px;
            font-weight: 600;
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }
         .form-group {
            margin-bottom: 15px;
        }
         .btn-primary {
            background-color: black;
            border: none;
            width: 100%;
            margin-top: 10px;
            display: block;
        }
        #referralInput{
            width: 100%;
        }
        </style>
    </head>
    <div class="container">
        <div class="login_wrap">
            <div class="padding_eight_all bg-white">
                <div class="heading_s1 auth-header text-uppercase">
                    Have a referral code?
                </div>
                <form action="/referral" method="POST">
                    <div class="form-group">
                        <input type="text" class="shadow-sm p-1 bg-body rounded border border-white" id="referralInput" name="referralCode" placeholder="Enter referral code (optional)" />
                    </div>
                    <button type="submit" class="btn btn-primary">Continue</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> 

