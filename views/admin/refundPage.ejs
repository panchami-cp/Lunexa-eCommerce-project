<%- include("../../views/partials/admin/header") %>

<div class="container-fluid">
    <div class="container mt-5">
    <h2>Refund for Order: <%=order.orderId%></h2>
    <p><strong>Customer:</strong> <%=order.userId.fullname%> | <%=order.userId.email%></p>
    <p><strong>Amount to Refund:</strong> â‚¹<%=refundAmount%></p>

    <form action="/admin/return/refund?id=<%=order._id%>&itemId=<%=item._id%>" method="POST" class="mt-4">
        <div class="mb-3">
            <label for="method" class="form-label">Refund Method</label>
            <select name="method" id="method" class="form-select" required>
                <option value="">Select Method --</option>
                <option value="wallet">Refund to Wallet</option>
                
            </select>
        </div>

        <div class="mb-3">
            <label for="amount" class="form-label">Refund Amount</label>
            <input type="number" step="0.01" name="amount" id="amount" 
                   value="<%=refundAmount %>" class="form-control" required>
        </div>

        <button type="submit" class="btn btn-success">Process Refund</button>
        <a href="/admin/orders" class="btn btn-secondary">Cancel</a>
    </form>
</div>
</div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
